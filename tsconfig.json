{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "*": ["./*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
